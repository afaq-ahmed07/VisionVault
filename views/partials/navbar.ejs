<div class="row header">
    <div class="col-lg-12">
        <nav class="navbar navbar-expand-lg border-bottom border-light">
            <a class="navbar-brand ps-3" href="#">VisionVault</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#navbarOffcanvasLg"
                aria-controls="navbarOffcanvasLg" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="offcanvas offcanvas-start" tabindex="-1" id="navbarOffcanvasLg"
                aria-labelledby="navbarOffcanvasLgLabel">
                <div class="offcanvas-header">
                    <h5 class="offcanvas-title" id="offcanvasNavbarLabel">VisionVault</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
                </div>
                <div class="offcanvas-body">
                    <ul class="navbar-nav justify-content-end flex-grow-1 me-3">
                        <li class="nav-item pe-3">
                            <form id="searchForm" class="d-flex pb-1 search-bar-form" role="search">
                                <img class="search-icon" src="/img/search.svg" alt="">
                                <input class="form-control search-bar flex-grow-1" type="search" name="query" id="searchInput" placeholder="Search" aria-label="Search">
                            </form>                          
                        </li>
                        <li class="nav-item nav-pages pe-4">
                            <a class="nav-link active" aria-current="page" href="/">Home</a>
                        </li>
                        <li class="nav-item nav-pages pe-4">
                            <a class="nav-link" aria-current="page" href="/about">About</a>
                        </li>
                        <% if (isLoggedIn) { %>
                        <li class="nav-item nav-pages dropdown pe-4">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown"
                                aria-expanded="false">
                                Explore
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="/my-projects">My Projects</a></li>
                                <li><a class="dropdown-item" href="/saved-projects">Saved Projects</a></li>
                            </ul>
                        </li>
                            <li class="nav-item dropdown dropstart pe-4">
                                <a class="nav-link dropdown" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <img class="profile-img" src="/img/profile.svg" alt="profile">
                                </a>
                                <ul class="dropdown-menu ">
                                    <li><a class="dropdown-item" href="/changepassword"><img src="/img/lock.svg" alt="lock.svg">Change Password</a></li>
                                    <li><a class="dropdown-item" href="/logout"><img src="/img/logout.svg" alt="logout.svg" class="inline-text">Logout</a></li>
                                    <li>
                                        <hr class="dropdown-divider">
                                    </li>
                                    <li><a class="dropdown-item" href="#">Logged in as <%= username %></a></li>
                                </ul>
                            </li>
                        <% } else { %>
                            <li class="nav-item pe-4 d-flex log-sign-li">
                                <button class="login" id="loginButton" role="button">Login</button>
                                <button class="signup" id="SignUpButton" role="button">Sign Up</button>
                            </li>
                        <% } %>
                    </ul>
                </div>
            </div>
        </nav>
    </div>
</div>